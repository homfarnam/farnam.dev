{
  "name": "farnam.dev",
  "private": true,
  "scripts": {
    "dev": " next ",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc --pretty --noEmit",
    "test-all": "yarn lint && yarn type-check && yarn test",
    "test": "jest",
    "format": "prettier --write **/*.{js,ts,tsx}",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "schemagen": "apollo client:download-schema --endpoint='https://farnamh.ir/graphql' schema.graphqls",
    "codegen": "yarn schemagen && graphql-let",
    "types": "apollo client:codegen --localSchemaFile=./schema.graphqls --includes=./graphql/**/*.ts --target=typescript",
    "generate": "graphql-codegen --config codegen.yml",
    "newlint": "next lint"
  },
  "dependencies": {
    "@apollo/client": "^3.5.6",
    "@apollo/react-hooks": "^4.0.0",
    "@loadable/component": "^5.15.2",
    "@types/loadable__component": "^5.13.4",
    "@types/styled-components": "^5.1.19",
    "apollo-cache-inmemory": "^1.6.6",
    "apollo-client": "^2.6.10",
    "apollo-link-http": "^1.5.17",
    "date-fns": "^2.28.0",
    "dotenv": "^10.0.0",
    "formik": "^2.2.9",
    "graphql": "^15.8.0",
    "graphql-let": "^0.18.6",
    "next": "12.0.7",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-indiana-drag-scroll": "^2.1.0",
    "sass": "^1.47.0",
    "styled-components": "^5.3.3",
    "tailwindcss": "^3.0.12"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^4.1.3",
    "@tailwindcss/jit": "^0.1.18",
    "@types/node": "17.0.8",
    "@types/react": "17.0.38",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@zeit/next-css": "^1.0.1",
    "eslint": "^8.6.0",
    "eslint-config-next": "^12.0.7",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "next-babel-minify": "^1.0.0",
    "next-fonts": "^1.5.1",
    "next-purgecss": "^4.0.0",
    "postcss-preset-env": "^7.2.0",
    "typescript": "4.5.4"
  }
}
