{
  "name": "farnamnext",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": " next ",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc --pretty --noEmit",
    "test-all": "yarn lint && yarn type-check && yarn test",
    "test": "jest",
    "format": "prettier --write **/*.{js,ts,tsx}",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "schemagen": "apollo client:download-schema --endpoint='https://farnamh.ir/graphql' schema.graphqls",
    "codegen": "yarn schemagen && graphql-let",
    "types": "apollo client:codegen --localSchemaFile=./schema.graphqls --includes=./graphql/**/*.ts --target=typescript",
    "generate": "graphql-codegen --config codegen.yml",
    "newlint": "next lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run type-check"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint",
      "yarn format"
    ]
  },
  "dependencies": {
    "@apollo/client": "^3.2.0",
    "@apollo/react-hooks": "^4.0.0",
    "@graphql-codegen/cli": "^1.21.5",
    "@graphql-codegen/introspection": "^1.17.8",
    "@graphql-codegen/typescript": "^1.17.9",
    "@graphql-codegen/typescript-operations": "^1.17.8",
    "@graphql-codegen/typescript-react-apollo": "^2.0.6",
    "@loadable/component": "^5.13.2",
    "@sentry/node": "^5.22.3",
    "@testing-library/react": "^11.0.4",
    "@types/loadable__component": "^5.13.0",
    "@types/styled-components": "^5.1.3",
    "@zeit/next-css": "^1.0.1",
    "apollo": "^2.33.4",
    "apollo-boost": "^0.4.9",
    "apollo-cache-inmemory": "^1.6.6",
    "apollo-client": "^2.6.10",
    "apollo-link-http": "^1.5.17",
    "dotenv": "^8.2.0",
    "formik": "^2.1.5",
    "global": "^4.4.0",
    "graphql": "^15.3.0",
    "graphql-let": "^0.15.4",
    "graphql-tag": "^2.11.0",
    "isomorphic-unfetch": "^3.0.0",
    "jest": "^26.4.2",
    "moment": "^2.28.0",
    "next": "^11.0.0",
    "next-babel-minify": "^1.0.0",
    "next-fonts": "^1.4.0",
    "next-with-apollo": "^5.1.0",
    "postcss-flexbugs-fixes": "^4.2.1",
    "prettier": "^2.1.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-markdown": "^4.3.1",
    "react-moment": "^0.9.7",
    "styled-components": "^5.2.0",
    "tailwindcss": "^2.1.4"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.3.0",
    "@graphql-codegen/cli": "1.17.8",
    "@graphql-codegen/introspection": "1.17.8",
    "@graphql-codegen/typescript": "1.17.8",
    "@graphql-codegen/typescript-operations": "1.17.8",
    "@graphql-codegen/typescript-react-apollo": "1.17.8",
    "@tailwindcss/jit": "^0.1.18",
    "@types/node": "^14.6.4",
    "@types/react": "^16.9.49",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "core-js": "^3.14.0",
    "eslint": "^7.28.0",
    "eslint-config-next": "^11.0.0",
    "next-purgecss": "^4.0.0",
    "postcss-preset-env": "^6.7.0",
    "typescript": "^4.3.2"
  }
}
